@using Store.Application.Services.Orders.Queries.GetOrderForAdmin;
@using Store.Common.Constant.Settings;
@model OrdrsAdminDto;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- END: Top Bar -->
<div class="intro-y flex flex-col sm:flex-row items-center mt-8">
    <div class="w-full sm:w-auto flex mt-4 sm:mt-0 mr-auto">
        <form method="get">
            <div class="w-56 relative text-gray-700 dark:text-gray-300">
                <fieldset>
                    <input name="searchkey" type="search" class="form-control w-56 box pl-10 placeholder-theme-13" placeholder="جستجو...">
                    <i class="w-4 h-4 absolute my-auto inset-y-0 ml-3 left-0" data-feather="search"></i>
                </fieldset>

            </div>
        </form>
    </div>

</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto lg:overflow-visible">
        <table class="table table-report -mt-2">
            <thead>
                <tr>
                    <th class="text-center whitespace-nowrap">کد سفارش</th>
                    <th class="text-center whitespace-nowrap">شناسه پرداختی</th>
                    <th class="text-center whitespace-nowrap">تاریخ</th>
                    <th class="text-center whitespace-nowrap">تعداد</th>
                    <th class="text-center whitespace-nowrap">وضعیت</th>
                    <th class="text-center whitespace-nowrap">عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ordersDtos)
                {
                    <tr class="intro-x">
                        <td class="text-center">@item.OrderId</td>
                        <td class="text-center">@item.RequestId</td>
                        <td class="text-center">@item.InsertTime</td>
                        <td class="text-center">@item.ProductCount</td>
                        <td class="text-center">
                            @if (item.Seen)
                            {
                                <div class="flex items-center justify-center text-theme-9">
                                    <i data-feather="eye" class="w-4 h-4 ml-2"></i>
                                </div>
                            }
                            else
                            {
                                <div class="flex items-center justify-center text-theme-6">
                                    <i data-feather="eye-off" class="w-4 h-4 ml-2"></i>
                                </div>
                            }
                        </td>
                        <td class="table-report__action w-56">
                            <div class="flex justify-center items-center">
                                <a href="~/admin/order/OrderDetail?orderId=@item.OrderId" class="flex items-center ml-3" href="javascript:;"> <i data-feather="check-square" class="w-4 h-4 ml-1"></i> مشاهده</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- END: Data List -->
    <!-- BEGIN: Pagination -->
    @Html.Raw(Model.Paginate)
    <!-- END: Pagination -->
</div>
@section Scripts{
    <script src="~/AdminTemplate/assets/js/jquery.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/localization/messages_fa.min.js"></script>
    <script src="~/AdminTemplate/Library/toastify-js/toastify.min.js"></script>
    <script src="~/AdminTemplate/assets/js/main.js"></script>
    <script>

      
    </script>
}


