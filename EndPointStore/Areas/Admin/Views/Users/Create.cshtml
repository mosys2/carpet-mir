@model Store.Application.Services.Users.Command.RegisterUser.CreateDto.CreateDto
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ثبت نام کاربر جدید";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Head
{
    <link rel="stylesheet" href="/AdminTemplate/assets/css/persian-datepicker.min.css" />
    <link rel="stylesheet" href="/AdminTemplate/Library/toastify-js/toastify.min.css" />
}

<!-- BEGIN: Vertical Form -->
<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium ml-auto">
        فرم ثبت نام کاربر
    </h2>
</div>
<div class="intro-y box py-5 sm:py-15 mt-3">
    <div class="px-5 sm:px-15">
        <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-dark-5">
            <h2 class="font-medium text-base ml-auto">
                ثبت نام
            </h2>
        </div>
        <form id="UserForm">
            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                    <div class="input-form  intro-y col-span-12 sm:col-span-6">
                        <label asp-for="Name"  class="form-label w-full flex flex-col sm:flex-row"><span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> حداقل 2 کاراکتر لازم است.</span> </label>
                        <input asp-for="Name"  type="text"  class="form-control" placeholder="علی" minlength="2" required>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="input-form  intro-y col-span-12 sm:col-span-6">
                        <label asp-for="LastName" class="form-label w-full flex flex-col sm:flex-row"><span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600">حداقل 2 کاراکتر لازم است.</span> </label>
                        <input asp-for="LastName" type="text" class="form-control" placeholder="علوی" minlength="2" required>
                    <span asp-validation-for="LastName"></span>
                    </div>
                    <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                        <p>جنسیت</p>
                        <div class="flex flex-col sm:flex-row mt-2">
                            <div class="form-check mr-2">
                                <input asp-for=Gender class="form-check-input" type="radio"  value=0 checked>
                                <label class="form-check-label" for="radio-switch-4">آقا</label>
                            </div>
                            <div class="form-check mr-2 mt-2 sm:mt-0">
                            <input asp-for="Gender" class="form-check-input" type="radio"  value=1>
                                <label class="form-check-label" for="radio-switch-6">خانم</label>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 intro-y col-span-12 sm:col-span-6">
                        <div class="w-full sm:w-auto flex items-center sm:mr-auto mt-3 sm:mt-0">
                            <input asp-for="IsActive"  data-target="#icon-dismiss-alert" class="show-code form-check-switch ml-0 mr-3" type="checkbox">
                        </div>
                    </div>
                    <div class="mt-5 intro-y col-span-12 sm:col-span-6">
                        نقش کاربر
                        <div >
                            <div class="preview">
                            <select asp-for="Roles"  data-placeholder="نقش کاربر را انتخاب کنید" data-search="true" class="tail-select w-full bg-gray-100" multiple="" asp-items=@ViewBag.Roles>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="input-form mt-3 intro-y col-span-12 sm:col-span-6">
                        <label asp-for="UserName" class="form-label w-full flex flex-col sm:flex-row">  <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> الزامی است ،بایدحداقل 4 کارکتر باشد </span> </label>
                       <input  asp-for="UserName" type="text" class="form-control" placeholder="نام کاربری" minlength="4" required>
                       <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="input-form mt-3  intro-y col-span-12 sm:col-span-6">
                        <label asp-for="Password" class="form-label w-full flex flex-col sm:flex-row">  <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> الزامی است ،بایدحداقل 6 کارکتر باشد </span> </label>
                        <input asp-for="Password" type=password  class="form-control" placeholder="رمز" minlength="6" required>
                        <span asp-validation-for="Password"></span>
                    </div>
                <div class="input-form mt-3  intro-y col-span-12 sm:col-span-6">
                        <label asp-for="RePassword" class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> تکرار رمز باید با رمز مطابقت داشته باشد </span> </label>
                        <input asp-for="RePassword" type=password  class="form-control" placeholder="تکرار رمز" minlength="6" required>
                        <span asp-validation-for="RePassword"></span>
                    </div>
                <div class="input-form mt-3  intro-y col-span-12 sm:col-span-6">
                    <label asp-for="Mobile" class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> </span> </label>
                    <input asp-for="Mobile" type="text" class="form-control" placeholder="موبایل" required>
                    <span asp-validation-for="Mobile"></span>
                </div>
                <div class="input-form mt-3  intro-y col-span-12 sm:col-span-6">
                        <label asp-for="Email" class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> الزامی است ،باید مطابق قالب آدرس ایمیل باشد</span> </label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@gmail.com" required>
                    <span asp-validation-for="Email"></span>
                    </div>
                    <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                        @*<label asp-for="Phone" class="form-label"></label>*@
                        <input asp-for="Phone" type="text" class="form-control" placeholder="تلفن">
                    </div>

                    <div class="input-form mt-3 intro-y col-span-12 sm:col-span-6">
                        <label asp-for="Address" class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"></span> </label>
                        <textarea asp-for="Address" class="form-control"  placeholder="آدرس خود را وارد کنید"></textarea>
                </div>
                <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                    <button type="submit"  class="btn btn-primary ">ثبت نام</button>
                </div>
                </div>
            
            </form>
    </div>
</div>
@section Scripts
    {

    <link href="~/AdminTemplate/assets/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/AdminTemplate/assets/js/jquery.js"></script>
    <script src="~/AdminTemplate/assets/Sweetalert2/sweetalert2.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/localization/messages_fa.min.js"></script>
    <script src="~/AdminTemplate/Library/toastify-js/toastify.min.js"></script>
    <script src="~/AdminTemplate/assets/js/main.js"></script>

    <script>
        $('#UserForm').on("submit", function (e) {
            event.preventDefault();
            if ($(this).valid()) {
                let rollsItem = [];
                $('#Roles :selected').each(function (i, sel) {
                    rollsItem.push($(sel).val());
                });
                let elementItems = e.target;
                let Name = elementItems.Name.value
                let LastName = elementItems.LastName.value
                let Roles = rollsItem
                let Gender = elementItems.Gender.value
                let IsActive = $('#IsActive').is(':checked') ? true : false
                let Mobile = elementItems.Mobile.value
                let Email = elementItems.Email.value
                let Phone = elementItems.Phone.value
                let UserName = elementItems.UserName.value
                let Password = elementItems.Password.value
                let RePassword = elementItems.RePassword.value
                let Address = elementItems.Address.value

                var data = {
                    Name, LastName, UserName, Password, RePassword, IsActive, Gender, Mobile, Email,Address,Phone,Roles
                }
                //ajax request
                ajaxFunc("Create", data, "POST",
                    function (result) {
                        if (result.isSuccess) {
                            $("#UserForm").trigger("reset");
                            successToastify.showToast();
                        } else {
                            dangerToastify.showToast();
                        }
                    },
                    function (error) {
                        dangerToastify.showToast();
                        console.log(error);
                    }
                )
            }

        });
    </script>
}


