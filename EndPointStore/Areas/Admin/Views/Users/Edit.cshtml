@using Store.Application.Services.Users.Queries.Edit
@model EditUserDto;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
   
}
@section Head
    {
    <link rel="stylesheet" href="/AdminTemplate/assets/css/persian-datepicker.min.css" />
    <link rel="stylesheet" href="/AdminTemplate/Library/toastify-js/toastify.min.css" />
}
<!-- BEGIN: Vertical Form -->
<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium ml-auto">
        فرم ویرایش
    </h2>
</div>
<div class="intro-y box py-5 sm:py-15 mt-3">
    <div class="px-5 sm:px-15">
        <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-dark-5">
            <h2 class="font-medium text-base ml-auto">
                ویرایش
            </h2>
        </div>
        <form id="UserForm">
            <div class="grid grid-cols-12 gap-4 gap-y-5 mt-5">
                <div class="input-form  intro-y col-span-12 sm:col-span-6">
                   <label asp-for="Name" class="form-label w-full flex flex-col sm:flex-row"><span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> حداقل 2 کاراکتر لازم است.</span></label>
                    <input asp-for="Name"  type="text" class="form-control" placeholder="علی" minlength="2" required="">
                    <span asp-validation-for="Name"></span>
                    <input   asp-for="Id" type="hidden">

                </div>
                <div class="input-form  intro-y col-span-12 sm:col-span-6">
                    <label  class="form-label w-full flex flex-col sm:flex-row"><span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600">حداقل 2 کاراکتر لازم است.</span></label>
                    <input asp-for ="LastName"  type="text" class="form-control" placeholder="علوی" minlength="2" required="">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                    <p>جنسیت</p>
                    <div class="flex flex-col sm:flex-row mt-2">
                        <div class="form-check mr-2">
                            <input asp-for="Gender" name="Gender" class="form-check-input" type="radio" value="0" )>
                            <label class="form-check-label" for="radio-switch-4">آقا</label>
                        </div>
                        <div class="form-check mr-2 mt-2 sm:mt-0">
                            <input asp-for="Gender" name="Gender" class="form-check-input" type="radio" value="1")>
                            <label class="form-check-label" for="radio-switch-6">خانم</label>
                        </div>
                    </div>
                </div>
                <div class="mt-4 intro-y col-span-12 sm:col-span-6">
                    وضعیت
                    <div class="w-full sm:w-auto flex items-center sm:mr-auto mt-3 sm:mt-0">
                        <input asp-for="IsActive" data-target="#icon-dismiss-alert" class="show-code form-check-switch ml-0 mr-3" type="checkbox">
                    </div>
                </div>
                <div class="mt-5 intro-y col-span-12 sm:col-span-6">
                    نقش کاربر
                    <div>
                        <div class="preview">
                            <select  data-search="true" class="tail-select w-full bg-gray-100" multiple="" asp-for="IdesInRole" asp-items=@ViewBag.Roles>
                               
                            </select>
                        </div>
                    </div>
                </div>
                <div class="mt-3 input-form has-success intro-y col-span-12 sm:col-span-6">
                    <label  class="form-label w-full flex flex-col sm:flex-row"><span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600">حداقل 11 کاراکتر لازم است.</span></label>
                    <input asp-for="Mobile" type="text" name="Mobile" class="form-control" placeholder="09137434426" minlength="11" required="">
                    <span asp-validation-for="Mobile"></span>
                </div>
                <div class="input-form mt-3  intro-y col-span-12 sm:col-span-6">
                    <label  class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> الزامی است ،باید مطابق قالب آدرس ایمیل باشد</span></label>
                    <input asp-for="Email" type="email" name="Email" class="form-control" placeholder="example@gmail.com" required="">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                    <label  class="form-label"></label>
                    <input asp-for="Phone" type="text" class="form-control" placeholder="تلفن">

                </div>
                <div class="input-form mt-3 intro-y col-span-12 sm:col-span-6">
                    <label  class="form-label w-full flex flex-col sm:flex-row"> <span class="sm:mr-auto mt-1 sm:mt-0 text-xs text-gray-600"> </span></label>
                    <textarea asp-for="Address" class="form-control" placeholder="آدرس خود را وارد کنید"  ></textarea>

                </div>
                <div class="mt-3 intro-y col-span-12 sm:col-span-6">
                    <button type="submit" class="btn btn-primary ">ویرایش</button>
                </div>
            </div>

        </form>
        <!-- END: Validation Form -->
       
    </div>
</div>
@section Scripts
    {
    <link href="~/AdminTemplate/assets/Sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/AdminTemplate/assets/js/jquery.js"></script>
    <script src="~/AdminTemplate/assets/Sweetalert2/sweetalert2.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/AdminTemplate/Library/jquery-validate/localization/messages_fa.min.js"></script>
    <script src="~/AdminTemplate/Library/toastify-js/toastify.min.js"></script>
    <script src="~/AdminTemplate/assets/js/main.js"></script>
   
    
    <script>
        $('#UserForm').on("submit", function (e) {
            event.preventDefault();
            if ($(this).valid()) {
                let rollsItem = [];
                $('#IdesInRole :selected').each(function (i, sel) {
                    rollsItem.push($(sel).val());
                });
                let elementItems = e.target;
                let Id = elementItems.Id.value
                let Name = elementItems.Name.value
                let LastName = elementItems.LastName.value
                let IdesInRole = rollsItem
                let Gender = elementItems.Gender.value
                let IsActive = $('#IsActive').is(':checked') ? true : false
                let Mobile = elementItems.Mobile.value
                let Email = elementItems.Email.value
                let Phone = elementItems.Phone.value
                let Address = elementItems.Address.value

                var data = {
                    Id, Name, LastName, IsActive, Gender, Mobile, Email, Address, Phone, IdesInRole
                }
                console.log(data);
                //ajax request
                ajaxFunc("Edit", data, "POST",
                     function (result) {
                        if (result.isSuccess) {
                            $("#UserForm").trigger("reset");
                            successToastify.showToast();
                        } else {
                            dangerToastify.showToast();
                        }
                    },
                    function (error) {
                        dangerToastify.showToast();
                        console.log(error);
                    }
                )
            }

        });
    </script>
}


