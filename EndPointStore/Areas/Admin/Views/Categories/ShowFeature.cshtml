@using Store.Application.Services.Products.Commands.AddNewFeatureToCategory;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddNewFeatureToCategoryModel
@{
    ViewData["Title"] = "ShowFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- BEGIN: Personal Information -->
<div class="intro-y box mt-5">
    <div class="p-5">
        <form id="register-setting">
            <div class="grid grid-cols-12 gap-x-5">
                <div class="col-span-12 xl:col-span-6">
                    <input type="hidden" asp-for="Id" value="@ViewBag.Id" />
                    <div class="mt-3">
                        <label class="form-label">سایز</label>
                        <select asp-for="SizeId" asp-items="@ViewBag.Sizes"  class="form-select">
                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="update-profile-form-9" class="form-label">رنگ</label>
                        <select asp-for="ColorId" asp-items="@ViewBag.Colors" class="form-select">
                        </select>
                    </div>
                    
                </div>
                <div class="col-span-12 xl:col-span-6">
                    <div class="mt-3">
                        <label for="update-profile-form-9" class="form-label">شکل</label>
                        <select asp-for="ShapeId" asp-items="@ViewBag.Shapes" class="form-select">
                        </select>
                    </div>
                    <div class="mt-3">
                        <label for="update-profile-form-9" class="form-label">مواد</label>
                        <select asp-for="MaterialId" asp-items="@ViewBag.Materials" class="form-select">
                        </select>
                    </div>
                </div>
            </div>
            <div class="flex justify-end mt-4">
                <button type="submit" class="btn btn-primary w-20 ml-auto"> ذخیره </button>
            </div>
        </form>
    </div>
</div>
<!-- END: Personal Information -->

