    <script>
        //desktop version
        $(document).ready(function () {
            $('.side-nav li a',).click(function () {
                localStorage.setItem("clicked", $(this).attr("id"))
                $('li').removeClass("side-menu--active");

            });
            //get class on load
            var foocus = localStorage.getItem("clicked");
            if (foocus == 'undefined' || foocus == "") {
                $('#menu-dashboard').addClass("side-menu--active");
            } else {
                $("#" + foocus).addClass("side-menu--active");
                let parentlink = $("#" + foocus).attr("data-parent");
                if (parentlink != 'undefined' || parentlink != "") {
                    $("." + parentlink).addClass('side-menu--open side-menu--active');
                    $("#" + parentlink).addClass('side-menu__sub-open');
                    $("#" + parentlink).css("display", "block");
                    $("." + parentlink).children().find("div.side-menu__sub-icon").addClass("transform rotate-180");
                }
            }

            //mobile
            $('.mobile-menu li a',).click(function () {
                localStorage.setItem("clicked", $(this).attr("id"))
                $('li').removeClass("menu--active");

            });
            //get class on load
            var foocus = localStorage.getItem("clicked");
            if (foocus == 'undefined' || foocus == "") {
                $('#menu-dashboard').addClass("menu--active");
            } else {
                $("#" + foocus).addClass("menu--active");
                let parentlink = $("#" + foocus).attr("data-parent");
                if (parentlink != 'undefined' || parentlink != "") {
                    $("." + parentlink).addClass('menu--open menu--active');
                    $("#" + parentlink).addClass('menu__sub-open');
                    $("#" + parentlink).css("display", "block");
                    $("." + parentlink).children().find("div.menu__sub-icon").addClass("transform rotate-180");
                }
            }
        });

        //change lang
        $("#sel-language").on("change", function () {
            let culture = $('#sel-language :selected').val();
            let data = {
                culture
            };
            ajaxFunc("/Admin/Home/ChangeLanguage", data, "POST",
                function (result) {
                    if (result.isSuccess) {
                        window.location.reload();
                    } else {
                        alert("خطا در تغییر زبان");
                    }
                },
                function (error) {
                    dangerToastify("Error System");
                    console.log(error);
                }
            )
        });

        //log out
        $("#logout").on("click", function () {
            swal.fire({
                title: 'خروج',
                text: "آیا مایل به خروج هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#7cacbe',
                confirmButtonText: 'بله',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    ajaxFunc("/Admin/Account/LogOut", null, "POST",
                        function (result) {
                            if (result.isSuccess) {
                                window.location.reload();
                            } else {
                                alert("Error log out");
                            }
                        },
                        function (error) {
                            dangerToastify("Error System");
                            console.log(error);
                        }
                    )

                }
            })
          
        });
    </script>
