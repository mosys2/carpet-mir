            <div class="col-span-12 xl:col-span-6">
                <div id="nested" class="row">
                    <button type="button" class="btn btn-primary w-20 ml-auto"> ذخیره </button>
                    <div id="menu" class="list-group col nested-sortable">
                        <!-- Call the JavaScript function to fetch and generate the menu -->
                        @foreach (var item in Model)
                        {
                            <div class="list-group-item nested-1">
                                @item.title
                                @if (item.Sub != null && item.Sub.Any())
                                {
                                    <div class="list-group nested-sortable">
                                        @foreach (var subItem in item.Sub)
                                        {
                                            <div class="list-group-item nested-2">
                                                @subItem.title
                                                @if (subItem.Sub != null && subItem.Sub.Any())
                                                {
                                                    <div class="list-group nested-sortable">
                                                        @foreach (var subSubItem in subItem.Sub)
                                                        {
                                                            <div class="list-group-item nested-3">
                                                                @subSubItem.title
                                                                <!-- Continue nesting for deeper levels if needed -->
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
            </div>
        </div>
       
    </div>
