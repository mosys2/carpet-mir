@using Store.Application.Services.Pages.Queries.GetAllPagesForSite;
@await Component.InvokeAsync("HeaderTop")
@model GetAllPagesSiteDto
@{
    ViewBag.Title= Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Metatags{
    <meta name="robots" content="index, follow">
    <meta name="keywords" content="@Model.Keywords">
    <meta name="description" content="@Model.MetaDecription">
    <meta name="twitter:card" content="article">
    <meta name="twitter:title" content="@Model.Title" />
    <meta name="twitter:description" content="@Model.MetaDecription">
    <meta name="twitter:image" content="@ViewBag.Setting?.Logo">
    <meta property="og:title" content="@Model.Title" />
    <meta property="og:url" content="@ViewBag.Setting?.BaseUrl" />
    <meta property="og:image" content="@ViewBag.Setting?.Logo">
    <meta property="og:description" content="@Model.MetaDecription">
    <meta property="og:site_name" content="@Model.Title" />
    <link rel="icon" type="image/svg" href="@ViewBag.Setting?.Icon" />
}
@if (Model != null)
{
<!-- start page title section -->
    <section class="wow animate__fadeIn parallax bg-extra-dark-gray" data-parallax-background-ratio="0.5" style="">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-6 text-center text-md-start">
                <!-- start page title -->
                <h1 class="alt-font text-white-2 font-weight-600 mb-0 text-uppercase">@Model.Title</h1>
                <!-- end page title -->
            </div>
        </div>
    </div>
</section>
    <!-- end page title section -->
        <!-- start heading style 01 section -->
        <section class="wow animate__fadeIn">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-10 last-paragraph-no-margin">
                      @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </section>
        <!-- end heading style 01 section -->
}
