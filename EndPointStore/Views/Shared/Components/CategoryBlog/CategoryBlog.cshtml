@using Store.Application.Services.Blogs.Queries.GetCategoryBlogForSite;
@model List<GetCategoryBlogSiteDto>
@if(Model.Count!=0)
{
    <div class="margin-45px-bottom sm-margin-25px-bottom">
        <div class="text-extra-dark-gray margin-20px-bottom alt-font text-uppercase font-weight-600 text-small aside-title"><span>Categories</span></div>
        <ul class="list-style-6 margin-50px-bottom text-small">
            @foreach (var category in Model)
            {
                <li><a href="/blogs?category=@(string.IsNullOrEmpty(category.Slug)?category.Id:category.Slug)">@category.Name</a><span>@category.CountSubCategory</span></li>
            }
        </ul>
    </div>
}
