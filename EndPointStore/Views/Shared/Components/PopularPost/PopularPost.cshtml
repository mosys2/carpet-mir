@using Store.Application.Services.Blogs.Queries.GetPopularPostsForSite;
@model List<GetPopularPostsDto>
@if(Model.Count>0)
{
    <div class="margin-45px-bottom sm-margin-25px-bottom">
        <div class="text-extra-dark-gray margin-25px-bottom alt-font text-uppercase font-weight-600 text-small aside-title"><span>@ViewBag.StringLocalizer["PopularPostTitle"]</span></div>
        <ul class="latest-post position-relative">
            @foreach (var popular in Model)
            {
                <li class="media d-flex">
                    <figure class="flex-shrink-0">
                        <a href="@(string.IsNullOrEmpty(popular.Slug)?popular.Id:popular.Slug)"><img src="@popular.Image" alt=""></a>
                    </figure>
                    <div class="media-body flex-grow-1 text-small"><a href="@(string.IsNullOrEmpty(popular.Slug)?popular.Id:popular.Slug)" class="text-extra-dark-gray"><span class="d-inline-block margin-5px-bottom">@popular.Title</span></a> <span class="d-block text-medium-gray text-small">@popular.InsertTime</span></div>
                </li>
            }
        </ul>
    </div>
}
