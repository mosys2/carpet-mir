@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer _Localizer
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <!-- title -->
    <title>@ViewBag.Title</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1" />

    @await RenderSectionAsync("Metatags",required:false)
    <!-- favicon -->
    <link rel="shortcut icon" href="/SiteTemplate/assets/images/favicon.png">
    <link rel="apple-touch-icon" href="/SiteTemplate/assets/images/apple-touch-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/SiteTemplate/assets/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/SiteTemplate/assets/images/apple-touch-icon-114x114.png">
    <!-- style sheets and font icons  -->
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/css/bootsnav.css">
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/css/font-icons.min.css">
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/css/theme-vendors.min.css">
    <!-- revolution slider -->
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/revolution/css/settings.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/revolution/css/layers.css">
    <link rel="stylesheet" type="text/css" href="/SiteTemplate/assets/revolution/css/navigation.css">
    <!-- style sheets -->
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/assets/css/style-rtl.css" />
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/assets/css/responsive.css" />
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/assets/css/slider.css" />
    <link href="~/SiteTemplate/Library/toastify-js/toastify.css" rel="stylesheet" />
    @await RenderSectionAsync("Head",required:false)

   
</head>
<body>
   
   @RenderBody()

    <!-- start footer -->
    <footer class="footer-classic-dark bg-extra-dark-gray bg-extra-bf-gray">
        <div class="bg-dark-footer padding-50px-tb sm-padding-30px-tb">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-12 text-center">
                        <h4 class="alt-font font-weight-600">
                            @_Localizer["Subscribe"]
                       </h4>
                       <div class="col-lg-8 justify-content-center m-auto">
                            <form class="position-relative" id="frmNewsletter">
                                <div class="mx-0 form-results"></div>
                                <div class="input-group margin-40px-tb">
                                    <input name="email" id="newsletter-email" type="email" placeholder="* @_Localizer["Subscrib placeholder"]" class="extra-big-input border-none form-control required required-error">
                                    <div class="input-group-append">
                                        <button type="submit" id="btn-register-newsletter" class="btn btn-large bg-white text-deep-pink submit"><i class="ti-email icon-small m-0"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-widget-area padding-five-top padding-30px-bottom sm-padding-30px-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-sm-6 widget border-right border-color-medium-dark-gray md-no-border-right md-margin-30px-bottom text-center text-sm-start">
                        <!-- start logo -->
                        @await Component.InvokeAsync("LogoFooter")
                        <!-- end logo -->
                        @await Component.InvokeAsync("FooterDescription")
                        <!-- start social media -->
                        @await Component.InvokeAsync("SocialMediaFooter")
                        <!-- end social media -->
                    </div>
                    <!-- start additional links -->
                    <div class="col-lg-3 col-sm-6 widget border-right border-color-medium-dark-gray padding-45px-left md-padding-15px-left md-no-border-right md-margin-30px-bottom text-center text-sm-start">
                        <div class="widget-title alt-font text-small text-medium-white text-uppercase margin-10px-bottom font-weight-600">@_Localizer["Additional Links"]</div>
                        <ul class="list-unstyled">
                            <li><a class="text-small" href="/blogs">@_Localizer["News"]</a></li>
                            <li><a class="text-small" href="/contactus">@_Localizer["Contact"]</a></li>
                            <li><a class="text-small" href="/gallery">@_Localizer["Gallery"]</a></li>
                            <li><a class="text-small" href="/products">@_Localizer["Collections"]</a></li>
                        </ul>
                    </div>
                   
                    <!-- end additional links //// -->
                    <!-- start contact information -->
                    @await Component.InvokeAsync("ContactInfoFooter")
                    <!-- end contact information -->
                    <!-- start subscribe -->
                    <div class="col-lg-3 col-sm-6 widget xs-margin-30px-bottom text-center text-sm-start">
                        <div class="widget-title alt-font text-small text-medium-white text-uppercase margin-15px-bottom font-weight-600">
                            @_Localizer["Arikeh Core Values"]
                        </div>
                        <ul class="list-unstyled">
                            <li>@_Localizer["Valuing Our Customers"]</li>
                            <li>@_Localizer["Customized Carpets to Suit Customer Preferences"]</li>
                            <li>@_Localizer["Reliable Customer Support"]</li>
                            <li>@_Localizer["Emphasis on Quality"]</li>
                        </ul>
                        
                    </div>
                    <!-- end subscribe -->
                </div>
            </div>
        </div>
        <div class="bg-dark-footer padding-50px-tb text-center sm-padding-30px-tb">
            <div class="container">
                <div class="row">
                    <!-- start copyright -->
                    <div class="col-md-6 text-md-start text-small text-center">© @DateTime.Now.Year @_Localizer["Powered by"] <a href="https://karg.ir/" target="_blank" class="text-dark-gray">@_Localizer["Karg"]</a></div>
                    <div class="col-md-6 text-md-end text-small text-center">
                        <a href="javascript:void(0);" class="text-dark-gray">@_Localizer["Term and Condition"]</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="javascript:void(0);" class="text-dark-gray">@_Localizer["Privacy Policy"]</a>
                    </div>
                    <!-- end copyright -->
                </div>
            </div>
        </div>
    </footer>
    <!-- end footer -->

    <!-- start scroll to top -->
    <a class="scroll-top-arrow" href="javascript:void(0);"><i class="ti-arrow-up"></i></a>
    <!-- end scroll to top -->
    <!-- javascript -->
   
    <script type="text/javascript" src="~/SiteTemplate/assets/js/jquery.min.js"></script>
    <script src="/SiteTemplate/library/toastify-js/toastify.min.js"></script>
    <script src="/SiteTemplate/library/toastify-js/toastify.js"></script>
    <script src="~/SiteTemplate/Library/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/SiteTemplate/Library/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript" src="~/SiteTemplate/assets/js/bootsnav.js"></script>
    <script type="text/javascript" src="~/SiteTemplate/assets/js/jquery.nav.js"></script>
    <script type="text/javascript" src="~/SiteTemplate/assets/js/hamburger-menu.js"></script>
    <script type="text/javascript" src="~/SiteTemplate/assets/js/theme-vendors.min.js"></script>
    <!-- revolution -->
	<script src="~/sitetemplate/assets/revolution/js/jquery.themepunch.revolution.min.js"></script>
	<script src="~/sitetemplate/assets/revolution/js/jquery.themepunch.tools.min.js"></script>
   
    <!-- revolution slider extensions (load below extensions JS files only on local file systems to make the slider work! The following part can be removed on server for on demand loading) -->
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.actions.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.carousel.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.kenburn.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.layeranimation.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.migration.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.navigation.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.parallax.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.slideanims.min.js"></script>
    <script type="text/javascript" src="/SiteTemplate/assets/revolution/js/extensions/revolution.extension.video.min.js"></script>
    <!-- setting -->
    <script type="text/javascript" src="~/SiteTemplate/assets/js/main.js"></script>
    <script>
        $(".sel-lang-desk").on("change", function (event) {
            event.preventDefault(); 
            let culture = this.value;
            $.ajax({
                url: "/Home/ChangeLanguage",
                type: "POST",
                data: { culture: culture },
                success: function (result) {
                    if (result.isSuccess) {
                        window.location.reload();
                    } else {
                        alert("خطا در تغییر زبان");
                    }
                },
                error: function (error) {
                    dangerToastify("Error System");
                    console.log(error);
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts",required:false)
</body>
</html>







